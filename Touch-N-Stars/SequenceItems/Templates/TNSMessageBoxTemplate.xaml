<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TouchNStars.SequenceItems"
    xmlns:ninactrl="clr-namespace:NINA.CustomControlLibrary;assembly=NINA.CustomControlLibrary"
    xmlns:mini="clr-namespace:NINA.View.Sequencer.MiniSequencer;assembly=NINA.Sequencer"
    xmlns:view="clr-namespace:NINA.View.Sequencer;assembly=NINA.Sequencer"
    xmlns:ns="clr-namespace:NINA.Core.Locale;assembly=NINA.Core">

    <DataTemplate x:Key="TouchNStars.SequenceItems.TNSMessageBox_Mini">
        <mini:MiniSequenceItem>
            <mini:MiniSequenceItem.SequenceItemContent>
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="TNS: " />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="{Binding Text}"
                        TextTrimming="CharacterEllipsis" />
                </StackPanel>
            </mini:MiniSequenceItem.SequenceItemContent>
        </mini:MiniSequenceItem>
    </DataTemplate>

    <DataTemplate DataType="{x:Type local:TNSMessageBox}">
        <view:SequenceBlockView>
            <view:SequenceBlockView.SequenceItemContent>
                <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Message Text  -->
            <GroupBox Grid.Row="0" Header="Message">
                <ninactrl:HintTextBox
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    AcceptsReturn="True"
                    HintText="Enter message text..."
                    MaxLines="5"
                    MinLines="2"
                    Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
            </GroupBox>

            <!--  Timeout Settings  -->
            <GroupBox Grid.Row="1" Header="Timeout Settings (Optional)">
                <StackPanel Margin="5" Orientation="Vertical">
                    <!-- Enable Timeout -->
                    <CheckBox
                        Margin="0,5,0,10"
                        Content="Enable Auto-Close after timeout"
                        IsChecked="{Binding CloseOnTimeout, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <!-- Timeout Duration and Action -->
                    <StackPanel
                        Margin="20,0,0,5"
                        IsEnabled="{Binding CloseOnTimeout}"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Text="Close after:" />
                        <ninactrl:IntStepperControl
                            MinWidth="100"
                            MaxValue="3600"
                            MinValue="1"
                            StepSize="5"
                            Value="{Binding TimeoutSeconds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Text="seconds" />
                    </StackPanel>

                    <!-- What to do on timeout -->
                    <Grid
                        Margin="20,5,0,5"
                        IsEnabled="{Binding CloseOnTimeout}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Text="On timeout:" />

                        <CheckBox
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            IsChecked="{Binding ContinueOnTimeout, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <StackPanel
                            Grid.Column="2"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                Text="Continue sequence" />
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="11"
                                Foreground="{StaticResource ButtonForegroundDisabledBrush}"
                                Text="(OFF = stop)" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!--  Info  -->
            <GroupBox Grid.Row="2" Header="Remote Control">
                <StackPanel Margin="5" Orientation="Vertical">
                    <TextBlock TextWrapping="Wrap">
                        This message box can be closed remotely via the Touch 'N' Stars API.
                    </TextBlock>
                    <TextBlock Margin="0,5,0,0" TextWrapping="Wrap">
                        API Endpoint: POST /messagebox/close/{id}
                    </TextBlock>
                    <TextBlock Margin="0,5,0,0" TextWrapping="Wrap">
                        List active boxes: GET /messagebox/list
                    </TextBlock>
                </StackPanel>
            </GroupBox>
        </Grid>
            </view:SequenceBlockView.SequenceItemContent>
        </view:SequenceBlockView>
    </DataTemplate>
</ResourceDictionary>
