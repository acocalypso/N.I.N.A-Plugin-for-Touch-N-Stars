<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TouchNStars.SequenceItems"
    xmlns:ninactrl="clr-namespace:NINA.CustomControlLibrary;assembly=NINA.CustomControlLibrary"
    xmlns:mini="clr-namespace:NINA.View.Sequencer.MiniSequencer;assembly=NINA.Sequencer"
    xmlns:view="clr-namespace:NINA.View.Sequencer;assembly=NINA.Sequencer"
    xmlns:ns="clr-namespace:NINA.Core.Locale;assembly=NINA.Core">

    <DataTemplate x:Key="TouchNStars.SequenceItems.TNSMessageBox_Mini">
        <mini:MiniSequenceItem>
            <mini:MiniSequenceItem.SequenceItemContent>
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="TNS: " />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="{Binding Text}"
                        TextTrimming="CharacterEllipsis" />
                </StackPanel>
            </mini:MiniSequenceItem.SequenceItemContent>
        </mini:MiniSequenceItem>
    </DataTemplate>

    <DataTemplate DataType="{x:Type local:TNSMessageBox}">
        <view:SequenceBlockView>
            <view:SequenceBlockView.SequenceItemContent>
                <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Message Text  -->
            <GroupBox Grid.Row="0" Header="Message">
                <ninactrl:HintTextBox
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    AcceptsReturn="True"
                    HintText="Enter message text..."
                    MaxLines="5"
                    MinLines="2"
                    Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
            </GroupBox>

            <!--  Timeout Settings  -->
            <GroupBox Grid.Row="1" Header="Timeout Settings">
                <StackPanel Margin="5" Orientation="Vertical">
                    <CheckBox
                        Margin="0,5,0,5"
                        Content="Enable Auto-Close Timeout"
                        IsChecked="{Binding CloseOnTimeout}" />

                    <StackPanel
                        Margin="0,5,0,0"
                        IsEnabled="{Binding CloseOnTimeout}"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Text="Timeout (seconds):" />
                        <ninactrl:IntStepperControl
                            MinWidth="100"
                            MaxValue="3600"
                            MinValue="1"
                            StepSize="5"
                            Value="{Binding TimeoutSeconds}" />
                    </StackPanel>

                    <CheckBox
                        Margin="0,10,0,5"
                        Content="Continue sequence on timeout"
                        IsChecked="{Binding ContinueOnTimeout}"
                        IsEnabled="{Binding CloseOnTimeout}" />
                </StackPanel>
            </GroupBox>

            <!--  Info  -->
            <GroupBox Grid.Row="2" Header="Remote Control">
                <StackPanel Margin="5" Orientation="Vertical">
                    <TextBlock TextWrapping="Wrap">
                        This message box can be closed remotely via the Touch 'N' Stars API.
                    </TextBlock>
                    <TextBlock Margin="0,5,0,0" TextWrapping="Wrap">
                        API Endpoint: POST /messagebox/close/{id}
                    </TextBlock>
                    <TextBlock Margin="0,5,0,0" TextWrapping="Wrap">
                        List active boxes: GET /messagebox/list
                    </TextBlock>
                </StackPanel>
            </GroupBox>
        </Grid>
            </view:SequenceBlockView.SequenceItemContent>
        </view:SequenceBlockView>
    </DataTemplate>
</ResourceDictionary>
