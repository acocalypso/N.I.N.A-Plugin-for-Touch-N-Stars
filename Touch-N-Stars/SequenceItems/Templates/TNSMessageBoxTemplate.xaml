<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TouchNStars.SequenceItems"
    xmlns:ninactrl="clr-namespace:NINA.CustomControlLibrary;assembly=NINA.CustomControlLibrary"
    xmlns:mini="clr-namespace:NINA.View.Sequencer.MiniSequencer;assembly=NINA.Sequencer"
    xmlns:view="clr-namespace:NINA.View.Sequencer;assembly=NINA.Sequencer"
    xmlns:ns="clr-namespace:NINA.Core.Locale;assembly=NINA.Core">

    <DataTemplate x:Key="TouchNStars.SequenceItems.TNSMessageBox_Mini">
        <mini:MiniSequenceItem>
            <mini:MiniSequenceItem.SequenceItemContent>
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="TNS: " />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="{Binding Text}"
                        TextTrimming="CharacterEllipsis" />
                </StackPanel>
            </mini:MiniSequenceItem.SequenceItemContent>
        </mini:MiniSequenceItem>
    </DataTemplate>

    <DataTemplate DataType="{x:Type local:TNSMessageBox}">
        <view:SequenceBlockView>
            <view:SequenceBlockView.SequenceItemContent>
                <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Message Text  -->
            <GroupBox Grid.Row="0" Header="Message">
                <ninactrl:HintTextBox
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    AcceptsReturn="True"
                    HintText="Enter message text..."
                    MaxLines="5"
                    MinLines="2"
                    Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
            </GroupBox>

            <!--  Timeout Settings  -->
            <GroupBox Grid.Row="1" Header="Timeout Settings (Optional)">
                <StackPanel Margin="5" Orientation="Horizontal">
                    <!-- Enable Timeout Checkbox -->
                    <CheckBox
                        Margin="0,0,15,0"
                        VerticalAlignment="Center"
                        IsChecked="{Binding CloseOnTimeout, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <!-- Timeout Duration -->
                    <TextBlock
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"
                        IsEnabled="{Binding CloseOnTimeout}"
                        Text="Auto-close after" />
                    <ninactrl:IntStepperControl
                        MinWidth="80"
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"
                        IsEnabled="{Binding CloseOnTimeout}"
                        MaxValue="3600"
                        MinValue="1"
                        StepSize="5"
                        Value="{Binding TimeoutSeconds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock
                        Margin="0,0,20,0"
                        VerticalAlignment="Center"
                        IsEnabled="{Binding CloseOnTimeout}"
                        Text="seconds, then" />

                    <!-- Continue/Stop Toggle -->
                    <CheckBox
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"
                        IsEnabled="{Binding CloseOnTimeout}"
                        IsChecked="{Binding ContinueOnTimeout, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        IsEnabled="{Binding CloseOnTimeout}"
                        Text="Continue" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="10"
                        Foreground="{StaticResource ButtonForegroundDisabledBrush}"
                        IsEnabled="{Binding CloseOnTimeout}"
                        Text="(OFF=stop)" />
                </StackPanel>
            </GroupBox>

        </Grid>
            </view:SequenceBlockView.SequenceItemContent>
        </view:SequenceBlockView>
    </DataTemplate>
</ResourceDictionary>
