<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TouchNStars.SequenceItems"
    xmlns:ns="clr-namespace:NINA.Core.Locale;assembly=NINA.Core">

    <!-- Template for the TNS MessageBox Dialog Window -->
    <DataTemplate DataType="{x:Type local:TNSMessageBoxResult}">
        <Grid MinWidth="400" MinHeight="150" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <!-- Message Text -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                <TextBlock
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="{Binding Message}"
                    TextWrapping="Wrap" />
            </ScrollViewer>

            <!-- API Info -->
            <TextBlock
                Grid.Row="1"
                Margin="10,5,10,10"
                HorizontalAlignment="Center"
                FontSize="11"
                Foreground="{StaticResource ButtonForegroundDisabledBrush}"
                Text="This message can be closed via Touch 'N' Stars API"
                TextWrapping="Wrap" />

            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Cancel Button -->
                <Button
                    Grid.Column="0"
                    MinWidth="120"
                    Margin="5"
                    Command="{Binding CancelCommand}"
                    IsCancel="True">
                    <StackPanel Orientation="Horizontal">
                        <Path
                            Width="15"
                            Height="15"
                            Margin="0,0,8,0"
                            Data="{StaticResource CancelSVG}"
                            Fill="{StaticResource ButtonForegroundBrush}"
                            Stretch="Uniform" />
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="{StaticResource ButtonForegroundBrush}"
                            Text="{ns:Loc LblCancel}" />
                    </StackPanel>
                </Button>

                <!-- Continue Button -->
                <Button
                    Grid.Column="1"
                    MinWidth="120"
                    Margin="5"
                    Command="{Binding ContinueCommand}"
                    IsDefault="True">
                    <StackPanel Orientation="Horizontal">
                        <Path
                            Width="15"
                            Height="15"
                            Margin="0,0,8,0"
                            Data="{StaticResource CheckedCircledSVG}"
                            Fill="{StaticResource ButtonForegroundBrush}"
                            Stretch="Uniform" />
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="{StaticResource ButtonForegroundBrush}"
                            Text="{ns:Loc LblContinue}" />
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </DataTemplate>
</ResourceDictionary>
